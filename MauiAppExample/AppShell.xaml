<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="MauiAppExample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MauiAppExample.View"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate view:LoginPage}"
        Route="LoginPage"/>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />


    <ShellContent
        Title="Insert"
        ContentTemplate="{DataTemplate view:InsertPage}"
        Route="InsertPage" />

    <ShellContent
        Title="Details"
        ContentTemplate="{DataTemplate view:DetailPage}"
        Route="DetailPage"/>


</Shell>