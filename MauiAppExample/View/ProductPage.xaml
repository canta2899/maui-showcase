<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiAppExample.ViewModel"
             x:DataType="viewmodel:ProductPageViewModel"
             x:Class="MauiAppExample.View.ProductPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Label Style="{StaticResource LabelCustom}" Text="A message: "></Label> 
            <Label Text="{Binding Msg}" Style="{StaticResource LabelCustom}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>