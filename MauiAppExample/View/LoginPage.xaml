<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:MauiAppExample.ViewModel"
             x:Class="MauiAppExample.View.LoginPage"
             x:DataType="viewmodel:LoginPageViewModel"
             Title="LoginPage">
	<VerticalStackLayout VerticalOptions="Center">
		<Label 
		    Text="Welcome!"
		    FontSize="32"
		    VerticalOptions="Center" 
		    HorizontalOptions="Center" />

		<StackLayout Orientation="Vertical" Margin="0,50,0,50">
			<Label FontSize="20" Text="Username" WidthRequest="120"/>
			<Entry x:Name="userNameEntry" FontSize="15" Placeholder="Entry your identifier" Text="{Binding Identifier, Mode=TwoWay}" HorizontalOptions="Center" WidthRequest="200"/>
		</StackLayout>

		<StackLayout Orientation="Vertical">
			<Label FontSize="20" Text="Password" WidthRequest="120"/>
			<Entry x:Name="passwordEntry" FontSize="15" Placeholder="Entry your username" IsPassword="True" Text="{Binding Password, Mode=TwoWay}" HorizontalOptions="Center" WidthRequest="200"/>
		</StackLayout>

        <Button VerticalOptions="Center" Margin="0,50,0,0" FontSize="32" Text="Login" HorizontalOptions="Center" Command="{Binding AuthenticateCommand}"/>
    </VerticalStackLayout>
</ContentPage>
